<div class="row">

  <% users.forEach((user) => { %>

    <div class="col-md-4">
      <div class="card text-center">

        <a href="/users/<%= user.id %>">
          <img class="card-img-top" src="<%= user.image %>" alt="<%= user.name %>" >
        </a>

        <div class="card-body">
          <a href="/users/<%= user.id %>">
            <h4 class="card-title">Name: <%= user.name %></h4>
          </a>
          <p class="card-text">Gender: <%= user.gender %></p>
          <p class="card-text">Age: <%= user.age %></p>
          <p class="card-text">Country: <%= user.country %></p>
          <p class="card-text">Faculty: <%= user.faculty %></p>

          <% if(locals.isAuthenticated && locals.user === user) { %>

            <a href="/users/<%= user.id %>/edit" class="btn btn-primary">Edit</a>

            <form method="POST" action="/users/<%= user.id %>">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn btn-danger">Delete Yourself</button>
            </form>

          <% } %>

        </div>

      </div>
    </div>

  <% }) %>

</div>
