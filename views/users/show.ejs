<div>

  <img src="<%= user.image %>" alt="<%= user.name %>">
  <h2><%= user.name %></h2>
  <p>
    <%= user.gender %><br>
    <%= user.age %><br>
    <%= user.country %><br>
    <%= user.faculty %>
  </p>


  <% if(locals.isAuthenticated && locals.user === user) { %>

    <a href="/users/<%= user.id %>/edit" class="btn btn-primary">Edit Yourself</a>

    <form method="POST" action="/users/<%= user.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-danger">Delete Yourself</button>
    </form>

  <% } %>


  <section>
    <h4>Comments</h4>
    <% user.comments.forEach((comment) => { %>
      <p><%= comment.content %></p>
      <small><%= comment.createdBy.username %></small>

      <% if(locals.isAuthenticated && comment.ownedBy(user)) { %>

        <form method="POST" action="/users/<%= user.id %>/comments/<%= comment.id %>">
          <input type="hidden" name="_method" value="DELETE">
          <button>Delete your comment</button>
        </form>

      <% } %>

    <% }) %>
  </section>

  </section>

  <% if(locals.isAuthenticated) { %>
    <section>
      <h4>How is your mate?</h4>
      <form method="POST" action="/users/<%= user.id %>/comments">
        <textarea name="content" id="content" placeholder="Comment"></textarea>
        <button class="button">post your comment</button>
      </form>
    </section>
  <% } %>

</div>
